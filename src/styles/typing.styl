@keyframes type
  from { width: 0;    }
  to   { width: 100%; }

.type-area
  margin-top 10px
  for x in 1..10
    p:nth-child({x})
      animation-delay (x * 2)s

.typed
  animation type 2s steps(80, end) forwards
  font-family 'VT323', Consolas, monospace
  margin 0
  overflow hidden
  width 0
  white-space nowrap
