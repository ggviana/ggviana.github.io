.project-list
  display flex
  flex-wrap wrap
  list-style-type none
  padding 0
  &.showing .project-item
    opacity 1
    
.project-item
  background-color white
  border-radius 3px
  box-shadow 0 1px 2px #aaa
  height 400px
  margin 10px
  opacity 0
  transition opacity 1s
  width calc(25% - 20px)
  z-index 0
  @media screen and (max-width: 1200px)
    width calc(50% - 20px)
  @media screen and (max-width: 600px)
    width calc(100% - 20px)
  for x in 1..10
    &:nth-child({x})
      transition-delay: (x * 0.5)s
      
.project-url
  color black
  display block
  width 100%
  height 100%
  
.project-name
  font-size 1.3rem
  font-weight 200
  overflow hidden
  padding 1rem 1.5rem
  text-overflow ellipsis
  white-space nowrap
  
.project-description
  color gray
  font-size .9rem
  font-weight 400
  height 30%
  line-height 1.5
  overflow hidden
  padding 0 1.5rem
  text-overflow ellipsis
  
.project-image
  display block
  height 50%
  object-fit cover
  width 100%
    
  